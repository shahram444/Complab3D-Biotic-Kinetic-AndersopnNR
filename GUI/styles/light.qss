/* CompLaB Studio 2.0 - COMSOL-Style Professional Light Theme
   Modeled after COMSOL Multiphysics 6.x interface */

/* --- Global --- */
QWidget {
    background-color: #f0f0f0;
    color: #1a1a1a;
    font-family: "Segoe UI", "Ubuntu", "Helvetica Neue", sans-serif;
    font-size: 10pt;
}

/* --- Main Window --- */
QMainWindow {
    background-color: #e8e8e8;
}

QMainWindow::separator {
    background-color: #c0c0c0;
    width: 3px;
    height: 3px;
}

QMainWindow::separator:hover {
    background-color: #0078d4;
}

/* --- Menu Bar --- */
QMenuBar {
    background-color: #f0f0f0;
    border-bottom: 1px solid #c8c8c8;
    padding: 2px 0;
}

QMenuBar::item {
    padding: 4px 10px;
    background: transparent;
}

QMenuBar::item:selected {
    background-color: #dce6f0;
}

QMenu {
    background-color: #ffffff;
    border: 1px solid #c8c8c8;
    padding: 4px 0;
}

QMenu::item {
    padding: 5px 30px 5px 20px;
}

QMenu::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QMenu::separator {
    height: 1px;
    background-color: #d0d0d0;
    margin: 4px 8px;
}

/* --- Toolbar --- */
QToolBar {
    background-color: #f0f0f0;
    border-bottom: 1px solid #c8c8c8;
    padding: 2px;
    spacing: 3px;
}

QToolButton {
    background: transparent;
    border: 1px solid transparent;
    border-radius: 3px;
    padding: 4px 8px;
    color: #1a1a1a;
}

QToolButton:hover {
    background-color: #dce6f0;
    border-color: #b0c4de;
}

QToolButton:pressed {
    background-color: #0078d4;
    color: #ffffff;
}

/* --- Dock / Panel Headers --- */
QDockWidget {
    titlebar-close-icon: none;
    titlebar-normal-icon: none;
    font-weight: bold;
}

QDockWidget::title {
    background-color: #e0e0e0;
    padding: 5px 8px;
    border-bottom: 1px solid #c0c0c0;
    text-align: left;
}

/* --- Tree View (Model Builder) --- */
QTreeWidget, QTreeView {
    background-color: #ffffff;
    border: 1px solid #c0c0c0;
    outline: 0;
    alternate-background-color: #f8f8f8;
}

QTreeWidget::item, QTreeView::item {
    padding: 3px 4px;
    border: none;
}

QTreeWidget::item:hover, QTreeView::item:hover {
    background-color: #e8f0fa;
}

QTreeWidget::item:selected, QTreeView::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QTreeWidget::branch:has-children:!has-siblings:closed,
QTreeWidget::branch:closed:has-children:has-siblings {
    image: none;
    border-image: none;
}

QHeaderView::section {
    background-color: #e8e8e8;
    color: #1a1a1a;
    padding: 4px 8px;
    border: none;
    border-right: 1px solid #c0c0c0;
    border-bottom: 1px solid #c0c0c0;
    font-weight: bold;
}

/* --- Tab Widget --- */
QTabWidget::pane {
    border: 1px solid #c0c0c0;
    background-color: #f0f0f0;
}

QTabBar::tab {
    background-color: #e0e0e0;
    color: #505050;
    border: 1px solid #c0c0c0;
    border-bottom: none;
    padding: 5px 14px;
    margin-right: 1px;
    min-width: 60px;
}

QTabBar::tab:hover {
    background-color: #dce6f0;
    color: #1a1a1a;
}

QTabBar::tab:selected {
    background-color: #f0f0f0;
    color: #1a1a1a;
    border-bottom: 2px solid #0078d4;
}

/* --- Scroll Area --- */
QScrollArea {
    border: none;
    background-color: transparent;
}

QScrollBar:vertical {
    background-color: #f0f0f0;
    width: 10px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #c0c0c0;
    min-height: 30px;
    border-radius: 4px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    background-color: #f0f0f0;
    height: 10px;
}

QScrollBar::handle:horizontal {
    background-color: #c0c0c0;
    min-width: 30px;
    border-radius: 4px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
}

/* --- Input Widgets --- */
QLineEdit, QSpinBox, QDoubleSpinBox, QComboBox {
    background-color: #ffffff;
    border: 1px solid #b0b0b0;
    border-radius: 3px;
    padding: 4px 8px;
    color: #1a1a1a;
    min-height: 22px;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

QLineEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus, QComboBox:focus {
    border-color: #0078d4;
}

QLineEdit:disabled, QSpinBox:disabled, QDoubleSpinBox:disabled, QComboBox:disabled {
    background-color: #e8e8e8;
    color: #808080;
    border-color: #c0c0c0;
}

QLineEdit[readOnly="true"] {
    background-color: #f0f0f0;
    color: #606060;
}

QComboBox::drop-down {
    border: none;
    padding-right: 6px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #c0c0c0;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    border: none;
    background: transparent;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    border: none;
    background: transparent;
}

/* --- Push Buttons --- */
QPushButton {
    background-color: #e0e0e0;
    border: 1px solid #b0b0b0;
    border-radius: 3px;
    padding: 5px 16px;
    color: #1a1a1a;
    min-height: 24px;
}

QPushButton:hover {
    background-color: #d0d8e0;
    border-color: #90a0b0;
}

QPushButton:pressed {
    background-color: #0078d4;
    color: #ffffff;
}

QPushButton:disabled {
    background-color: #e8e8e8;
    color: #a0a0a0;
    border-color: #c0c0c0;
}

/* Primary action buttons */
QPushButton[primary="true"] {
    background-color: #0078d4;
    border-color: #005a9e;
    color: #ffffff;
    font-weight: bold;
}

QPushButton[primary="true"]:hover {
    background-color: #106ebe;
}

QPushButton[primary="true"]:pressed {
    background-color: #005a9e;
}

/* Danger / destructive buttons */
QPushButton[danger="true"] {
    background-color: #fde7e7;
    border-color: #d03030;
    color: #c42b1c;
}

QPushButton[danger="true"]:hover {
    background-color: #fcd5d5;
}

/* --- Checkboxes & Radio --- */
QCheckBox, QRadioButton {
    spacing: 6px;
    color: #1a1a1a;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
}

QCheckBox::indicator {
    border: 1px solid #b0b0b0;
    border-radius: 3px;
    background-color: #ffffff;
}

QCheckBox::indicator:checked {
    background-color: #0078d4;
    border-color: #005a9e;
}

QRadioButton::indicator {
    border: 1px solid #b0b0b0;
    border-radius: 8px;
    background-color: #ffffff;
}

QRadioButton::indicator:checked {
    background-color: #0078d4;
    border-color: #005a9e;
}

/* --- Group Box --- */
QGroupBox {
    border: 1px solid #c0c0c0;
    border-radius: 4px;
    margin-top: 12px;
    padding-top: 16px;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 12px;
    padding: 0 6px;
    color: #0055a0;
}

/* --- Tables --- */
QTableWidget, QTableView {
    background-color: #ffffff;
    alternate-background-color: #f8f8f8;
    border: 1px solid #c0c0c0;
    gridline-color: #d0d0d0;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

QTableWidget::item, QTableView::item {
    padding: 3px 6px;
}

QTableCornerButton::section {
    background-color: #e8e8e8;
    border: 1px solid #c0c0c0;
}

/* --- Splitter --- */
QSplitter::handle {
    background-color: #c0c0c0;
}

QSplitter::handle:horizontal {
    width: 3px;
}

QSplitter::handle:vertical {
    height: 3px;
}

QSplitter::handle:hover {
    background-color: #0078d4;
}

/* --- Status Bar --- */
QStatusBar {
    background-color: #0078d4;
    border-top: 1px solid #005a9e;
    color: #ffffff;
    font-size: 9pt;
}

QStatusBar::item {
    border: none;
}

QStatusBar QLabel {
    color: #ffffff;
}

/* --- Text Edit / Plain Text --- */
QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    border: 1px solid #c0c0c0;
    color: #1a1a1a;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
    font-family: "Consolas", "Fira Code", "Source Code Pro", monospace;
}

/* --- Progress Bar --- */
QProgressBar {
    border: 1px solid #c0c0c0;
    border-radius: 3px;
    background-color: #e8e8e8;
    text-align: center;
    color: #1a1a1a;
    height: 18px;
}

QProgressBar::chunk {
    background-color: #0078d4;
    border-radius: 2px;
}

/* --- Tooltip --- */
QToolTip {
    background-color: #ffffff;
    color: #1a1a1a;
    border: 1px solid #c0c0c0;
    padding: 4px 8px;
    font-size: 9pt;
}

/* --- Dialog --- */
QDialog {
    background-color: #f0f0f0;
}

/* --- Label Variants --- */
QLabel[heading="true"] {
    font-size: 14pt;
    font-weight: bold;
    color: #1a1a1a;
    padding: 4px 0;
}

QLabel[subheading="true"] {
    font-size: 11pt;
    font-weight: bold;
    color: #0055a0;
    padding: 2px 0;
}

QLabel[info="true"] {
    color: #606060;
    font-size: 9pt;
}

QLabel[section="true"] {
    font-size: 10pt;
    font-weight: bold;
    color: #0055a0;
    padding: 6px 0 2px 0;
    border-bottom: 1px solid #c0c0c0;
    margin-bottom: 4px;
}

/* --- Frame Separators --- */
QFrame[frameShape="4"] {
    color: #c0c0c0;
    max-height: 1px;
}

QFrame[frameShape="5"] {
    color: #c0c0c0;
    max-width: 1px;
}

/* --- Collapsible Section Header --- */
QPushButton[collapsible="true"] {
    background-color: #e0e0e0;
    border: none;
    border-bottom: 1px solid #c0c0c0;
    border-radius: 0;
    padding: 6px 12px;
    text-align: left;
    font-weight: bold;
    color: #0055a0;
}

QPushButton[collapsible="true"]:hover {
    background-color: #dce6f0;
}

/* --- List Widget --- */
QListWidget {
    background-color: #ffffff;
    border: 1px solid #c0c0c0;
    outline: 0;
}

QListWidget::item {
    padding: 4px 8px;
}

QListWidget::item:hover {
    background-color: #e8f0fa;
}

QListWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}
